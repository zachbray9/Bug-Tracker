<UserControl x:Class="Bug_Tracker.Views.TicketDetailsPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bug_Tracker.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="40, 40, 40, 10">
            <TextBlock Text="Tickets  /  " FontFamily="Arial" FontSize="16" Opacity="0.5"/>
            <TextBlock Text="{Binding TicketTitle, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" FontFamily="Arial" FontSize="16" Opacity="0.5"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="40, 10, 40, 40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
                
                <!--Title Textbox-->
                <TextBox Grid.Row="0" Style="{StaticResource FocusChangeableTextBox}" Text="{Binding TicketTitle, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MaxLength="500" MaxHeight="100" TextWrapping="Wrap"/>

                <StackPanel Grid.Row="1" Margin="0, 20, 0, 20">
                    <TextBlock Text="Description" FontFamily="Arial" FontSize="16" Margin="5, 0, 0, 10"/>
                    <TextBox Style="{StaticResource FocusChangeableTextBox}" Text="{Binding TicketDescription, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MaxLength="2500" MaxHeight="220" TextWrapping="Wrap"/>
                </StackPanel>

                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Comments" FontSize="12" FontFamily="Arial" Margin="0, 0, 0, 5"/>
                    <TextBox Grid.Row="1" Style="{StaticResource TextBoxWithWatermark}"/>
                    <ListBox Grid.Row="2" Margin="0, 10, 0, 0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0"/>
                                    <TextBlock Grid.Row="1"/>
                                    <TextBlock Grid.Row="2"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Grid>

            <Grid Grid.Column="1">
                
            </Grid>
        </Grid>

    </Grid>
</UserControl>
