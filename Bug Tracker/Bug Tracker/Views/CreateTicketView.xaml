<UserControl x:Class="Bug_Tracker.Views.CreateTicketView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bug_Tracker.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Create Ticket" FontFamily="Arial" Opacity="0.5" Margin="40, 40, 40, 0"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="40">
                <TextBlock Text="Title" FontFamily="Arial" FontSize="18" FontWeight="SemiBold" Margin="0, 0, 0, 5"/>
                <TextBox FontSize="14" FontFamily="Arial" VerticalContentAlignment="Center" Height="30"/>

                <TextBlock Text="Description" FontFamily="Arial" FontSize="18" FontWeight="SemiBold" Margin="0, 40, 0, 5"/>
                <TextBox FontSize="14" FontFamily="Arial" VerticalContentAlignment="Top" HorizontalContentAlignment="Left" TextWrapping="Wrap" Height="150"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="40">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Status" FontFamily="Arial" FontSize="18" FontWeight="SemiBold"/>
                    <ComboBox Margin="20, 0" Width="100" ItemsSource="{Binding StatusOptions}"/>
                </StackPanel>

                <Border BorderBrush="Gray" BorderThickness="0.6" Height="245" Margin="0, 5, 0, 0" Padding="20">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Assignee" FontFamily="Arial" FontSize="14"/>
                            <ComboBox Width="175" Margin="20, 0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0, 40">
                            <TextBlock Text="Reporter" FontFamily="Arial" FontSize="14" Margin="0, 10, 0, 0"/>
                            <Grid Margin="20, 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="DarkOliveGreen" CornerRadius="500" Padding="7, 8">
                                    <TextBlock Text="{Binding CurrentUser.Initials}" Foreground="White" FontSize="14" FontFamily="Arial"/>
                                </Border>

                                <TextBlock Grid.Column="1" Text="User Name" FontFamily="Arial" VerticalAlignment="Center" Margin="10, 0"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
